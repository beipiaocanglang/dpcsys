<?xml version="1.0"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans.xsd
                           http://code.alibabatech.com/schema/dubbo
                           http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

    <bean id="propertyConfigurer" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="locations">
            <list>
                <value>classpath:runtime.properties</value>
            </list>
        </property>
    </bean>

    <!-- 引入spring  -->
    <import resource="spring/spring-mvc.xml"/>

    <!-- 引入dubbo  -->
    <import resource="dubbo/application-dubbo.xml"/>

    <!-- 引入rabbitmq -->
    <import resource="rabbitmq/app-rabbitmq.xml"/>
    <!-- 加载系统设置信息 -->
    <bean id="dpcInterfaceAppUtil" class="dpcsys.consumption.dpcInterface.listener.DpcInterfaceAppUtil"/>
</beans>